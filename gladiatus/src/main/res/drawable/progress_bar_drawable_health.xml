<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="@color/GladiatusColor10" android:centerColor="@color/GladiatusColor10"
                android:centerY="0.75" android:endColor="@color/GladiatusColor10" android:angle="90" />
            <stroke android:width="1dp" android:color="#555555" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/GladiatusHealthGreenColor" android:endColor="@color/GladiatusHealthGreenColor"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="@color/GladiatusColor10" />
            </shape>
        </clip>
    </item>
</layer-list>