<resources>
    <style name="GladiatusTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/GladiatusTheme.ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/GladiatusTheme.TabBar</item>
        <item name="android:actionBarTabStyle">@style/GladiatusTheme.TabView</item>
    </style>

    <style name="GladiatusTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/GladiatusColor10</item>
        <item name="android:titleTextStyle">@style/GladiatusTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="GladiatusTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="GladiatusTheme.TabView" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="GladiatusTheme.TabBar" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <!--  <item name="android:divider">@drawable/app_icon</item>
         <item name="android:background">@drawable/app_icon</item> -->
         <item name="android:dividerPadding">0dp</item>
     </style>


 </resources>